# AWS Configuration
AWS_REGION=us-east-1

# S3 Bucket for data lake
LEAVE_MGMT_S3_BUCKET=leave-mgmt-data-bucket

# DynamoDB Tables
LEAVE_MGMT_ENGINEER_TABLE=EngineerAvailability
LEAVE_MGMT_QUOTA_TABLE=LeaveQuota
LEAVE_MGMT_REQUEST_TABLE=LeaveRequests

# Kinesis Data Stream
LEAVE_MGMT_KINESIS_STREAM=leave-events-stream

# Kinesis Firehose (optional - leave empty if not used)
LEAVE_MGMT_FIREHOSE_STREAM=

# Gemini (Google AI Studio) configuration
# Get an API key from: https://aistudio.google.com/
GOOGLE_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-3-pro-preview

# Kafka Configuration
# Format: host1:port1,host2:port2
# For local Kafka: localhost:9092
# For MSK: use the bootstrap brokers from AWS Console
LEAVE_MGMT_KAFKA_BOOTSTRAP=localhost:9092
LEAVE_MGMT_KAFKA_TOPIC=leave-events


